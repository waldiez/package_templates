{
    "python.defaultInterpreterPath": "${env:PYTHON_INTERPRETER_PATH:.venv/bin/python}",
    "pylint.args": ["--rcfile=pyproject.toml"],
    "python.autoComplete.extraPaths": [
        "${workspaceFolder}/packages/core/python",
        "${workspaceFolder}/packages/studio",
        "${workspaceFolder}/packages/jupyter",
    ],
    "python.envFile": "",
    "pylint.importStrategy": "fromEnvironment",
    "editor.defaultFormatter": "ms-python.black-formatter",
    "mypy.runUsingActiveInterpreter": true,
    "mypy-type-checker.args": ["--config pyproject.toml"],
    "yaml.format.printWidth": 100,
    "yaml.customTags": [
        "tag:yaml.org,2002:python/name:pymdownx.superfences.fence_code_format",
        "tag:yaml.org,2002:python/name:mkdocs_exporter.formats.pdf.buttons.download.enabled",
        "tag:yaml.org,2002:python/name:mkdocs_exporter.formats.pdf.buttons.download.attributes"
    ],
    "search.exclude": {
        "**/node_modules": true,
        "**/.venv": true,
        "**/dist": true,
        "**/out": true
    },
    "npm.packageManager": "bun",
    "files.eol": "\n",
    "cSpell.mergeCSpellSettings": true,
    "cSpell.configFile": "cspell.json"
}
